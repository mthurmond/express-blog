extends layout

block content
    .container-md.pt-3.pb-5.mb-5(style='max-width: 45rem;')
        form(action=`/edit/${post.slug}`, method="post")
            // title
            .mb-5
            label.form-label(for='title') Title
            input#title.form-control(type='title' name='title' value=post.title)

            // body
            .mb-5
            label.form-label(for='body') Body
            input#x(type='hidden' name='body' value=post.body)
            trix-editor.trix-content(input='x')

            // status
            .mb-5
            label.form-label(for='status') Status (current: #{post.status})
            select#status.form-control.form-select(type='status' name='status' value=post.status)
                option(selected='') 
                option(value='live') Live
                option(value='draft') Draft

            // action buttons
            .mb-5
            input.btn.btn-secondary(type='button' name='cancel' value='Cancel' onClick=`window.location.href="/${post.slug}";`)
            button.btn.btn-primary.mx-3(type='submit') Submit