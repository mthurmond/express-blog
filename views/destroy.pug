extends layout

block content
    .container-md.pt-3.pb-5.mb-5(style='max-width: 45rem;')
        form(action=`/destroy/${post.id}`, method="post")
            // title
            .mb-5
            label.form-label(for='title') Are you sure you want to delete the post with this title? #{post.title}

            // button
            .mb-5
            button.btn.btn-primary(type='submit') Delete