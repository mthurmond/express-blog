extends layout

block content
    .container-md.pt-3.pb-5.mb-5(style='max-width: 45rem;')
        form(action="/", method="post")
            // title
            .mb-5
            label.form-label(for='title') Title
            input#title.form-control(type='title' name='title')

            // body
            .mb-5
            label.form-label(for='body') Body
            textarea#body.form-control(name='body')

            // update button
            .mb-5
            button.btn.btn-primary(type='submit') Submit